<Window x:Class="CrestiUI.CreateLobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Создание лобби" Height="180" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0">Имя лобби</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" x:Name="LobbyNameTextBox" Text="imya lobbi" />

        <Label Grid.Row="1" Grid.Column="0">Имя пользователя</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="UserNameTextBox" Text="imya polzovatelya" />

        <Button Grid.Row="2" Grid.Column="0" Click="CreateLobby_Click" Margin="30,15,30,15">создать лобби</Button>
        <Button Grid.Row="2" Grid.Column="1" Margin="30,15,30,15">отмена</Button>
    </Grid>
</Window>